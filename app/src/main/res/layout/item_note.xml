
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/layout_marginEnd1"
    android:layout_marginStart="@dimen/layout_marginStart1"
    android:layout_marginTop="@dimen/layout_marginTop1"
    android:layout_marginBottom="@dimen/layout_marginBottom"
    tools:backgroundTint="@android:color/holo_purple">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/layout_marginEnd2"
            android:layout_marginStart="@dimen/layout_marginStart2"
            android:layout_marginTop="@dimen/layout_marginTop2"
            tools:text="@string/text1"/>

        <TextView
            android:id="@+id/body"
            style="@style/TextAppearance.AppCompat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            tools:text="@string/text2"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
